<UserControl x:Class="WorldClock.AddClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldClock"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">
    <Grid>
        <Button x:Name="AddClockBtn" Content="" HorizontalAlignment="Center" Height="100" VerticalAlignment="Center" Width="150" Click="AddTime"/>
        <Border BorderBrush="Black" BorderThickness="1.5" RenderTransformOrigin="0.485,0.462">
            <Line  X1="10" Y1="10"
            X2="10" Y2="50"
            Stroke="Black"
            StrokeThickness="2" Margin="64,22,64,22" RenderTransformOrigin="0.488,0.488"/>
        </Border>
        <Line  X1="10" Y1="10"
            X2="10" Y2="50"
            Stroke="Black"
            StrokeThickness="2" Margin="62,25,62,11" RenderTransformOrigin="0.488,0.488">
            <Line.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.136"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Line.RenderTransform>
        </Line>
    </Grid>
</UserControl>
